{% extends '::backend_layout.html.twig' %}

{% block local_stylesheets %}
{% endblock %}

{% set title = 'label.user.basic.info'|trans %}

{% block content %}

    <div id="wrapper">
        <!-- Navigation -->
        {% include ':navigation/backend:header.html.twig' %}
        {% include ':navigation/backend:left_menu.html.twig' %}
        <div id="page-wrapper">
            <br/>
            <div class="row" data-for-test-name='user-list'>
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            {{ 'label.user.basic.info'|trans }}
                            <div id="search-box">
                                <form method="GET" action="">
                                    <input
                                        type="search"
                                        id="search-text"
                                        name="searchText"
                                        placeholder="{{ 'label.user.search'|trans }}..."
                                    />
                                    <button
                                        id="search-button"
                                        class ="fa fa-search"
                                        type="submit"
                                    ></button>
                                </form>
                            </div>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="dataTable_wrapper">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>{{ 'label.user.phone'|trans }}</th>
                                            <th>{{ 'label.user.name'|trans }}</th>
                                            <th>{{ 'label.user.gender'|trans }}</th>
                                            <th>{{ 'label.user.driving.license.number'|trans }}</th>
                                            <th class="center">{{ 'label.user.vehicle'|trans }}</th>
                                            <th class="center">{{ 'label.user.point'|trans }}</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                            {# display navigation #}
                            <div class="navigation">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block local_javascripts %}
    {% javascripts
    %}
        <script type="application/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}